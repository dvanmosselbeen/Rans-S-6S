<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>pedals.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <object-name>pedalL</object-name>
    <object-name>pedalR</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pedalL</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25</factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pedalR</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25</factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
