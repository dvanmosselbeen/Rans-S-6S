<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
    
    <chase-distance-m type="double" archive="y">-20.0</chase-distance-m>

    <view n="100">
        <name>Passanger Seat View</name>
        <internal archive="y">true</internal>
        <type>lookfrom</type>
        <config>
            <from-model type="bool">true</from-model>
            <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
            <x-offset-m archive="y">  0.326 </x-offset-m>	<!-- Right -->
            <y-offset-m archive="y">  0.368 </y-offset-m>	<!-- Up    -->
            <z-offset-m archive="y"> -0.727 </z-offset-m>	<!-- Back  -->
            <pitch-offset-deg> 0 </pitch-offset-deg>
            <default-field-of-view-deg>65</default-field-of-view-deg>
            <dynamic-view type="bool">true</dynamic-view>
        </config>
    </view>

    <view n="101">
        <name>Tail Camera View</name>
        <type>lookfrom</type>
        <internal archive="y">true</internal>
        <config>
            <from-model type="bool">true</from-model>
            <from-model-idx type="int">0</from-model-idx>
            <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
            <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
            <y-offset-m archive="y"> 2.980 </y-offset-m> <!--Up-->
            <z-offset-m archive="y"> 9.686 </z-offset-m> <!--Back-->
            <default-field-of-view-deg type="double">30</default-field-of-view-deg>
            <pitch-offset-deg>-5</pitch-offset-deg>
        </config>
    </view>

    <!-- Center Wide View -->
    <view n="108">
        <name>Center Wide View</name>
        <internal archive="y">true</internal>
        <type>lookfrom</type>
        <config>
            <from-model type="bool">true</from-model>
            <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
            <x-offset-m archive="y">  0 </x-offset-m>       <!-- Blender y axis -->
            <y-offset-m archive="y">  0.268 </y-offset-m>   <!-- Blender z axis -->
            <z-offset-m archive="y"> -0.727 </z-offset-m>   <!-- Blender x axis -->
            <pitch-offset-deg> 0 </pitch-offset-deg>
            <default-field-of-view-deg>65</default-field-of-view-deg>
            <!--dynamic-view type="bool">true</dynamic-view-->
        </config>
    </view>

    <!-- Garming GPS View -->
    <view n="109">
        <name>Garming 196 GPS View</name>
        <internal archive="y">true</internal>
        <type>lookfrom</type>
        <config>
            <from-model type="bool">true</from-model>
            <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
            <x-offset-m archive="y">  0 </x-offset-m>       <!-- Blender y axis -->
            <y-offset-m archive="y">  0.225 </y-offset-m>    <!-- Blender z axis -->
            <z-offset-m archive="y"> -1.5 </z-offset-m>     <!-- Blender x axis -->
            <pitch-offset-deg> 0 </pitch-offset-deg>
            <default-field-of-view-deg>65</default-field-of-view-deg>
            <dynamic-view type="bool">true</dynamic-view>
        </config>
    </view>

    <!-- Cockpit View -->
    <view n="0">
        <internal archive="y">true</internal>
        <config>
            <x-offset-m archive="y"> -0.232 </x-offset-m>	<!-- Right -->
            <y-offset-m archive="y">  0.268 </y-offset-m>	<!-- Up    -->
            <z-offset-m archive="y"> -0.927 </z-offset-m>	<!-- Back  -->
            <!--pitch-offset-deg>-15</pitch-offset-deg-->
            <!--default-field-of-view-deg>65</default-field-of-view-deg-->
        </config>
    </view>

    <!-- Helicopter view -->
    <view n="1">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>

    <view n="2">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>

    <view n="3">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>

    <view n="4">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>
    
    <view n="5">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>

    <view n="6">
        <config>
            <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
        </config>
    </view>

</PropertyList>
